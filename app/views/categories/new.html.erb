<h1 align="center" style="margin-bottom: 4rem">Create a Category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for @category, :html => {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
  <div class="control-label col-sm-offset-1 col-sm-2">
    <%= f.label :name %>
  </div>
  <div class="col-sm-6">
    <%= f.text_field :name, class: "form-control", placeholder: "Enter Category", autofocus: true %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-3 col-sm-4">
    <%= f.submit class: "btn btn-primary btn-md" %>
  </div>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-3">
<%= link_to "Cancel request", root_path %>
</div>
