<h1 align="center">Articles List</h1>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="article-body">
          <%= truncate(article.description, length: 50) %>
          <div class="article-meta-data">
            <small>Created by: <%= article.user.username %>, <%= time_ago_in_words(article.created_at)%> ago</small> <br>
            <small>Updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
          </div>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this", edit_article_path(article), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Sure you want to delete this?"}, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
